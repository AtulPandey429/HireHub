<%- include('./partials/header.ejs') %>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">

<link rel="stylesheet" href="/style.css">

    <form action="/jobs" method="get" style="    float: right;
    flex: initial;
    margin: 40px;
    padding: 8px;">
        <input class="mt-2 pt-1" type="text" name="search">
        <input class="mt-1" type="submit" value="search">
    </form>

    <h1 class="page-heading">List of all jobs</h1>
<a class="btn btn-danger" href="/jobs/new">Add a new job</a>
<div class="d-flex row flex-wrap m-4">
    <% for(let job of foundJobs){ %>
    <div class=" offset-1 col-2">
        <img class="job-image" src="<%= job.image %>" alt="<%= job.name %>">
        <h3><%= job.name %></h3>
        <a class="btn btn-success" href="/jobs/<%= job._id %>">Read More</a>
    </div>
    <% } %>
</div>

<%- include('./partials/footer.ejs') %>
